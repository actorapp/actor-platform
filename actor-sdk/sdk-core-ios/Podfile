platform :ios, '8.0'
use_frameworks!

workspace 'ActorSDK'
xcodeproj 'ActorSDK.xcodeproj'
xcodeproj 'ActorApp.xcodeproj'

inhibit_all_warnings!

link_with 'ActorApp'

target 'ActorApp' do
    xcodeproj 'ActorApp.xcodeproj'

    # Tracking
    pod 'HockeySDK', '~> 3.8-RC'
    pod 'Fabric'
    pod 'Crashlytics'

    # Core Tools
    pod 'RegexKitLite'
    pod 'CocoaAsyncSocket'
    pod 'zipzap'

    # Main UI
    pod 'NYTPhotoViewer'
    pod 'TTTAttributedLabel'
    pod 'RSKImageCropper'
    pod 'JDStatusBarNotification'
    pod 'Neon'

    # Small UI
    pod 'VBFPopFlatButton'
    pod 'SZTextView'
        
    # Progress
    pod 'M13ProgressSuite'
    pod 'MBProgressHUD'
    pod 'SVProgressHUD'

    # Alerts
    pod 'BlockAlertsAnd-ActionSheets'
    pod 'RMUniversalAlert'
    pod 'PSTAlertController'
end

target 'ActorSDK' do
    xcodeproj 'ActorSDK.xcodeproj'

    # J2Objc Runtime
    pod 'J2ObjC-Framework'

    # Core Tools
    pod 'RegexKitLite'
    pod 'CocoaAsyncSocket'
    pod 'zipzap'

    # Main UI
    pod 'NYTPhotoViewer'
    pod 'TTTAttributedLabel'
    pod 'RSKImageCropper'
    pod 'JDStatusBarNotification'

    # Small UI
    pod 'VBFPopFlatButton'
    pod 'SZTextView'
        
    # Progress
    pod 'M13ProgressSuite'
    pod 'MBProgressHUD'
    pod 'SVProgressHUD'

    # Alerts
    pod 'BlockAlertsAnd-ActionSheets'
    pod 'RMUniversalAlert'
    pod 'PSTAlertController'
end
