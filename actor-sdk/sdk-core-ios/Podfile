platform :ios, '8.0'
use_frameworks!

workspace 'ActorSDK'
project 'ActorSDK.xcodeproj'
project 'ActorApp.xcodeproj'

inhibit_all_warnings!

# link_with 'ActorApp'

target 'ActorApp' do
    project 'ActorApp.xcodeproj'

    # Core Tools
    pod 'RegexKitLite'
    pod 'CocoaAsyncSocket'
    pod 'zipzap'

    # Main UI
    pod 'TTTAttributedLabel'
    pod 'RSKImageCropper'
    pod 'JDStatusBarNotification'
    pod 'YYImage', '0.9.3'
    pod 'YYCategories'
    pod 'DZNWebViewController'

    # Small UI
    pod 'VBFPopFlatButton'
    pod 'SZTextView'
        
    # Progress
    pod 'M13ProgressSuite'
    pod 'MBProgressHUD'
    
    # Calls
    # pod 'libjingle_peerconnection'
end

target 'ActorSDK' do
    project 'ActorSDK.xcodeproj'

    # J2Objc Runtime
    pod 'J2ObjC-Framework'

    # Core Tools
    pod 'RegexKitLite'
    pod 'CocoaAsyncSocket'
    pod 'zipzap'

    # Main UI
    pod 'TTTAttributedLabel'
    pod 'RSKImageCropper'
    pod 'JDStatusBarNotification'
    pod 'YYImage', '0.9.3'
    pod 'YYCategories'
    pod 'DZNWebViewController'

    # Small UI
    pod 'VBFPopFlatButton'
    pod 'SZTextView'
        
    # Progress
    pod 'M13ProgressSuite'
    pod 'MBProgressHUD'
    
    # Calls
    pod 'libjingle_peerconnection'
end
