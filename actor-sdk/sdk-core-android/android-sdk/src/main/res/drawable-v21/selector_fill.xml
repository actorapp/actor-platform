<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/selector_ripple">
    <item>

        <selector xmlns:android="http://schemas.android.com/apk/res/android"
            android:exitFadeDuration="200">
            <item android:drawable="@color/selector_selected" android:state_pressed="true" />
            <item android:drawable="@color/selector_selected" android:state_selected="true" />
            <item android:drawable="@color/selector_hover" android:state_focused="true" />
            <item android:drawable="@color/selector_hover" android:state_hovered="true" />
            <item android:drawable="@android:color/transparent" />
        </selector>
    </item>
</ripple>